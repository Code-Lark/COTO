<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout style="@style/PullDownStyle">

        <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/menu_name"
                    style="@style/InfoItem.Account"
                    android:layout_height="90dp"
                    app:sLeftIconRes="@drawable/ic_default_head"
                    app:sLeftViewMarginLeft="20dp"
                    app:sLeftTextString="账号" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    app:sLeftIconRes="@drawable/ic_baseline_message_24"
                    app:sLeftViewMarginLeft="20dp"
                    app:sLeftTextString="消息通知" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    app:sLeftIconRes="@drawable/ic_baseline_history_24"
                    app:sLeftViewMarginLeft="20dp"
                    app:sLeftTextString="最近浏览" />

<!--                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView-->
<!--                    style="@style/InfoItem.Account"-->
<!--                    app:sLeftTextString="我的书单（未开发）" />-->

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/menu_share"
                    style="@style/InfoItem.Account"
                    app:sLeftIconRes="@drawable/ic_baseline_share_24"
                    app:sLeftViewMarginLeft="20dp"
                    app:sLeftTextString="分享应用" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    app:sLeftIconRes="@drawable/ic_baseline_nights_stay_24"
                    app:sLeftViewMarginLeft="20dp"
                    app:sRightViewType="switchBtn"
                    app:sSwitchIsChecked="true"
                    app:sSwitchMinWidth="55dp"
                    app:sLeftTextString="夜间模式" />

<!--                app:sThumbResource="@drawable/thumb"-->
<!--                app:sTrackResource="@drawable/track"-->

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/menu_settings"
                    style="@style/InfoItem.Account"
                    app:sLeftIconRes="@drawable/ic_menu_settings"
                    app:sLeftViewMarginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:sLeftTextString="设置" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>